  <div class="contact-form-container">
    <form id="form-sender">
      <label
        for="subject"
        data-animate-input>
        Subject
        <input
          required
          type="text"
          class="inputs-override-style glassmorp-card"
          placeholder="Subject"
          name="subject" />
      </label>
      <label
        for="name"
        data-animate-input>
        Your Name
        <input
          required
          class="inputs-override-style glassmorp-card"
          type="text"
          name="name"
          placeholder="Your Name" />
      </label>
      <label
        for="message"
        data-animate-input>
        Message
        <textarea
          required
          minlength="50"
          class="message-input glassmorp-card"
          name="message"
          maxlength="500"
          placeholder="Message goes here"></textarea>
      </label>
      <input
        class="btn"
        type="submit"
        name="submit"
        data-animate-input=""
         />
    </form>
  </div>
